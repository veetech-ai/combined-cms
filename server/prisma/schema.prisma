model Display {
  id        String   @id @default(uuid())
  name      String
  hexCode   String   @unique
  status    String   @default("offline") // "online" or "offline"
  lastSeen  DateTime @default(now())
  storeId   String
  moduleId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  store     Store    @relation(fields: [storeId], references: [id])
  module    Module   @relation(fields: [moduleId], references: [id])

  @@index([storeId])
  @@index([moduleId])
  @@index([hexCode])
}

// Update Store model to include displays relation
model Store {
  id          String    @id @default(uuid())
  name        String
  // ... other existing fields ...
  displays    Display[]
}

// Update Module model to include displays relation
model Module {
  id          String    @id @default(uuid())
  name        String
  // ... other existing fields ...
  displays    Display[]
} 